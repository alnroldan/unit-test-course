namespace BCRTest.UnitTest
{
    public class MathTests
    {
        [SetUp]
        public void Setup()
        {
        }

        [Test]
        public void Add_WhenCalled_ReturnTheSumOfArguments() 
        {
            var math = new BCRTests.Fundamentals.Math();

            var result = math.Add(1, 2);

            Assert.That(result, Is.EqualTo(3));

        }
    }
}
